<!-- Login Required Modal -->
<dialog id="loginRequiredModal" class="modal backdrop:bg-black backdrop:bg-opacity-50">
  <div class="modal-box bg-white rounded-lg shadow-md p-6 w-full max-w-md">
    <div class="text-center">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Login Required</h2>
      
      <p class="text-gray-600 mb-6">
        You need to be logged in to access this feature. Please log in to continue.
      </p>
      
      <div class="space-y-3">
        <button 
          onclick="loginRequiredModal.close(); loginModal.showModal()" 
          class="w-full px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary-hover transition-colors"
        >
          Login to Continue
        </button>
        
        <button 
          onclick="loginRequiredModal.close()" 
          class="w-full px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors"
        >
          Cancel
        </button>
      </div>
    </div>
  </div>
</dialog>

