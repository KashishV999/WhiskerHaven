<% layout("/layouts/boilerplate") %>

<body class="bg-muted min-h-screen py-8">
  <div class="container mx-auto max-w-4xl px-4">
    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-8">
      <div class="text-center">
        <h1 class="text-3xl font-bold text-foreground mb-2">
          Cat Adoption Process
        </h1>
        <p class="text-muted-foreground">
          Simple steps to find your perfect companion
        </p>
      </div>
    </div>

    <!-- Process Steps -->
    <div class="space-y-6">
      <!-- Step 1: Browse -->
      <section class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center font-bold text-lg"
            >
              1
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-foreground mb-3">
              Browse Available Cats
            </h3>
            <p class="text-secondary-foreground mb-4">
              Look through our cats and find one you'd like to adopt.
            </p>
            <a
              href="/cats"
              class="inline-block bg-primary hover:bg-primary-hover text-white font-medium py-2 px-6 rounded-md transition-colors duration-200"
            >
              Browse Cats
            </a>
          </div>
        </div>
      </section>

      <!-- Step 2: Start Adoption -->
      <section class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center font-bold text-lg"
            >
              2
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-foreground mb-3">
              Start Adoption Process
            </h3>
            <p class="text-secondary-foreground mb-4">
              When you find a cat you like, click "Start Adoption Process" on
              their profile page. This will take you to the adoption application
              form.
            </p>
            <div class="bg-gray-50 p-4 rounded-md border-l-4 border-primary">
              <p class="text-sm text-secondary-foreground">
                <strong>Example:</strong> Go to any cat's page → Click "Start
                Adoption Process" button → Fill out the form
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Step 3: Fill Application -->
      <section class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center font-bold text-lg"
            >
              3
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-foreground mb-3">
              Fill Out Application
            </h3>
            <p class="text-secondary-foreground mb-4">
              Complete the adoption form with your personal information, living
              situation, and why you want to adopt this cat.
            </p>
            <ul
              class="list-disc list-inside text-secondary-foreground space-y-1"
            >
              <li>Personal details (name, email, phone)</li>
              <li>Housing information</li>
              <li>Pet experience</li>
              <li>Care plans</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Step 4: Review & Adopt -->
      <section class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-primary text-white rounded-full flex items-center justify-center font-bold text-lg"
            >
              4
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-foreground mb-3">
              Review & Take Home
            </h3>
            <p class="text-secondary-foreground mb-4">
              We'll review your application and contact you to arrange pickup of
              your new furry friend!
            </p>
          </div>
        </div>
      </section>
    </div>

    <!-- Call to Action -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mt-8">
      <div class="text-center">
        <h3 class="text-xl font-semibold text-foreground mb-4">
          Ready to Find Your Cat?
        </h3>
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center"
        >
          <a
            href="/cats"
            class="bg-primary hover:bg-primary-hover text-white font-semibold py-3 px-8 rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 shadow-sm"
          >
            Browse Available Cats
          </a>
          <a
            href="/"
            class="text-primary hover:text-primary-hover underline font-medium transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-sm"
          >
            ← Return to Home
          </a>
        </div>
      </div>
    </div>
  </div>
</body>
