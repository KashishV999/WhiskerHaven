
<% layout("/layouts/boilerplate") %>

    <form action="/cats/<%=cat._id%>?_method=PUT" method="POST">
      <label for="name">Name: </label>
      <input type="text" id="name" name="name" value="<%=cat.name%>" required />

      <br /><br />
      <label for="breed">Breed: </label>
      <input type="text" id="breed" name="breed" value="<%=cat.breed%>" required />

      <br /><br />
      <label for="age">Age: </label>
      <input type="number" name="age" id="age" required min="0" step="1" value="<%=cat.age%>" required />

      <br /><br />
      <label for="color">Color: </label>
      <input type="color" id="color" name="color" value="<%=cat.color%>" required />

      <br /><br />
      <label for="weight">Weight (kg): </label>
      
      <input type="number" name="weight" id="weight" value="<%=cat.weight%>" required min="0" />
     

      <br /><br />
      <label for="gender">Gender: </label>
      <select name="gender" id="gender" required>
        <option value="" disabled <%= !cat.gender ? 'selected' : '' %>>Select gender</option>
        <option value="Female" <%= cat.gender === 'Female' ? 'selected' : '' %>>Female</option>
        <option value="Male" <%= cat.gender === 'Male' ? 'selected' : '' %>>Male</option>
      </select>

      <br /><br />
      <label for="description">Description: </label>
      <textarea
        id="description"
        name="description"
        required
        rows="3"
        cols="30"
       
      ><%=cat.description%></textarea>

      <br /><br />
      <label for="image">Image: </label>
      <input type="url" id="image" name="image" value="<%=cat.image%>" required />

      <br /><br />
      <label for="shelter">Shelter: </label>
      <select name="shelter" id="shelter">
        <option value="" disabled selected>Select shelter</option>
        <% shelters.forEach((shelter) => { %>
            <option value="<%= shelter._id %>" <%= cat.shelter && cat.shelter._id.toString() === shelter._id.toString() ? 'selected' : '' %>><%= shelter.name %></option>

        <% }) %>
      </select>

      <br /><br />

      <button type="submit">Submit</button>
    </form>
    <br>
    <button><a href="/cats">Cancel</a></button>


