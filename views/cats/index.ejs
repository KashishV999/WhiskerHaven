<% layout("/layouts/boilerplate") %>






<div class="container mx-auto px-4 py-8 max-w-7xl">
  <div class="text-center mb-10">
    <h2 class="text-3xl font-bold text-gray-900 mb-3">Cats Available for Adoption</h2>
    <p class="text-gray-600 max-w-2xl mx-auto">Browse our available cats and find your new feline companion.</p>
  </div>

  <div class="lg:grid lg:grid-cols-4 gap-8">
    <!-- Enhanced filter sidebar -->
    <div class="lg:col-span-1 mb-8 lg:mb-0">
      <div class="bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden sticky top-4">
        <!-- Filter header -->
        <div class="bg-gradient-to-r from-amber-500 to-amber-400 px-6 py-4">
          <h3 class="text-xl font-bold text-white flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
            </svg>
            Find Your Perfect Cat
          </h3>
        </div>
        
        <form action="/cats" method="GET" class="p-6">
          <!-- Search section -->
          <div class="mb-6">
            <label for="search" class="block text-sm font-medium text-gray-700 mb-2">Search</label>
            <div class="relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </div>
              <input 
                type="text" 
                id="search"
                name="search" 
                placeholder="Search by name or breed" 
                class="block w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors"
              >
            </div>
          </div>

          <!-- Age filter with custom styling -->
          <div class="mb-6">
            <label for="age" class="block text-sm font-medium text-gray-700 mb-2">Age</label>
            <div class="relative">
              <select 
                id="age"
                name="age" 
                class="block w-full pl-4 pr-10 py-3 text-base border border-gray-300 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-amber-500 bg-white transition-colors"
              >
                <option value="all">All Ages</option>
                <option value="kitten">Kitten (less than 1 year)</option>
                <option value="young">Young (1-3 years)</option>
                <option value="adult">Adult (4-10 years)</option>
                <option value="senior">Senior (10+ years)</option>
              </select>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </div>
            </div>
          </div>

          <!-- Special considerations with enhanced styling -->
          <div class="mb-6">
            <h3 class="flex items-center text-sm font-medium text-gray-700 mb-3 pb-2 border-b border-gray-200">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              Special Considerations
            </h3>
            <div class="space-y-3">
              <!-- Health considerations group -->
              <div class="space-y-3 mb-4">
                <p class="text-xs uppercase tracking-wider text-gray-500 font-medium">Health</p>
                
                <label class="flex items-center gap-3 cursor-pointer group">
                  <div class="relative flex items-center justify-center">
                    <input type="checkbox" id="spayed_neutered" name="spayed_neutered" class="peer sr-only">
                    <div class="w-5 h-5 border-2 border-gray-300 rounded group-hover:border-amber-500 peer-checked:bg-amber-500 peer-checked:border-amber-500 transition-colors"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-gray-700 group-hover:text-gray-900 transition-colors">Spayed/Neutered</span>
                </label>
                
                <label class="flex items-center gap-3 cursor-pointer group">
                  <div class="relative flex items-center justify-center">
                    <input type="checkbox" id="vaccinated" name="vaccinated" class="peer sr-only">
                    <div class="w-5 h-5 border-2 border-gray-300 rounded group-hover:border-amber-500 peer-checked:bg-amber-500 peer-checked:border-amber-500 transition-colors"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-gray-700 group-hover:text-gray-900 transition-colors">Vaccinated</span>
                </label>
                
                <label class="flex items-center gap-3 cursor-pointer group">
                  <div class="relative flex items-center justify-center">
                    <input type="checkbox" id="microchipped" name="microchipped" class="peer sr-only">
                    <div class="w-5 h-5 border-2 border-gray-300 rounded group-hover:border-amber-500 peer-checked:bg-amber-500 peer-checked:border-amber-500 transition-colors"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-gray-700 group-hover:text-gray-900 transition-colors">Microchipped</span>
                </label>
                
                <label class="flex items-center gap-3 cursor-pointer group">
                  <div class="relative flex items-center justify-center">
                    <input type="checkbox" id="special_needs" name="special_needs" class="peer sr-only">
                    <div class="w-5 h-5 border-2 border-gray-300 rounded group-hover:border-amber-500 peer-checked:bg-amber-500 peer-checked:border-amber-500 transition-colors"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-gray-700 group-hover:text-gray-900 transition-colors">Special Needs</span>
                </label>
                
                <label class="flex items-center gap-3 cursor-pointer group">
                  <div class="relative flex items-center justify-center">
                    <input type="checkbox" id="house_trained" name="house_trained" class="peer sr-only">
                    <div class="w-5 h-5 border-2 border-gray-300 rounded group-hover:border-amber-500 peer-checked:bg-amber-500 peer-checked:border-amber-500 transition-colors"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-gray-700 group-hover:text-gray-900 transition-colors">House Trained</span>
                </label>
              </div>
              
              <!-- Compatibility group -->
              <div class="space-y-3">
                <p class="text-xs uppercase tracking-wider text-gray-500 font-medium">Compatibility</p>
                
                <label class="flex items-center gap-3 cursor-pointer group">
                  <div class="relative flex items-center justify-center">
                    <input type="checkbox" id="good_with_children" name="good_with_children" class="peer sr-only">
                    <div class="w-5 h-5 border-2 border-gray-300 rounded group-hover:border-amber-500 peer-checked:bg-amber-500 peer-checked:border-amber-500 transition-colors"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-gray-700 group-hover:text-gray-900 transition-colors">Good with Children</span>
                </label>
                
                <label class="flex items-center gap-3 cursor-pointer group">
                  <div class="relative flex items-center justify-center">
                    <input type="checkbox" id="good_with_cats" name="good_with_cats" class="peer sr-only">
                    <div class="w-5 h-5 border-2 border-gray-300 rounded group-hover:border-amber-500 peer-checked:bg-amber-500 peer-checked:border-amber-500 transition-colors"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-gray-700 group-hover:text-gray-900 transition-colors">Good with Cats</span>
                </label>
                
                <label class="flex items-center gap-3 cursor-pointer group">
                  <div class="relative flex items-center justify-center">
                    <input type="checkbox" id="good_with_dogs" name="good_with_dogs" class="peer sr-only">
                    <div class="w-5 h-5 border-2 border-gray-300 rounded group-hover:border-amber-500 peer-checked:bg-amber-500 peer-checked:border-amber-500 transition-colors"></div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="absolute w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-gray-700 group-hover:text-gray-900 transition-colors">Good with Dogs</span>
                </label>
              </div>
            </div>
          </div>

          <!-- Filter action buttons -->
          <div class="pt-2 space-y-3">
            <button 
              type="submit" 
              class="w-full px-4 py-3 bg-amber-500 text-white font-medium rounded-lg hover:bg-amber-600 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 transition-colors flex items-center justify-center"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
              </svg>
              Apply Filters
            </button>
            
            <a 
              href="/cats" 
              class="w-full px-4 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors text-center flex items-center justify-center"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              Reset Filters
            </a>
          </div>
          

        </form>
      </div>
    </div>

    <!-- Right side with cat grid -->
    <div class="lg:col-span-3">
      <!-- Cat grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6 mb-10">
        <% cats.forEach((cat) => { %>
          <div class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-shadow border border-gray-200 group">
            <div class="relative overflow-hidden">
              <img 
                src="<%= cat.image %>" 
                alt="Image of <%= cat.name %>, a <%= cat.breed %> breed" 
                class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-300"
              />
              <div class="absolute top-3 right-3">
                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                  <%= cat.age %> years
                </span>
              </div>
            </div>
            <div class="p-5 space-y-4">
              <h3 class="font-bold text-xl text-gray-900"><%= cat.name %></h3>
              <ul class="space-y-1 text-gray-600">
                <li class="flex items-center gap-2">
                  <span class="font-semibold">Breed:</span> <%= cat.breed %>
                </li>
                <li class="flex items-center gap-2">
                  <span class="font-semibold">Gender:</span> <%= cat.gender %>
                </li>
              </ul>
              <p class="text-gray-600 line-clamp-2"><%= cat.description %></p>
              <a 
                href="/cats/<%= cat._id %>" 
                class="block w-full text-center bg-amber-50 text-amber-800 border border-amber-200 px-4 py-3 rounded-lg hover:bg-amber-100 transition-colors font-medium"
              >
                View Details
              </a>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Pagination -->
      <div class="flex flex-wrap items-center justify-center gap-2 mt-10">
        <% if (currentPage > 1) { %>
          <a href="/cats?page=<%= currentPage - 1 %>&perPage=<%= perPage %>" class="inline-flex">
            <button class="px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 flex items-center transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Previous
            </button>
          </a>
        <% } else { %>
          <button disabled class="px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 text-gray-400 cursor-not-allowed flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Previous
          </button>
        <% } %>

        <div class="flex items-center gap-2">
          <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/cats?page=<%= i %>&perPage=<%= perPage %>">
              <button 
                <%= currentPage === i ? 'aria-current="page"' : '' %>
                class="h-10 w-10 flex items-center justify-center rounded-lg text-sm font-medium <%= currentPage === i ? 'bg-amber-500 text-white border-amber-500' : 'border border-gray-300 bg-white text-gray-700 hover:bg-gray-50' %> focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-1 transition-colors"
              >
                <%= i %>
              </button>
            </a>
          <% } %>
        </div>

        <% if (currentPage < totalPages) { %>
          <a href="/cats?page=<%= currentPage + 1 %>&perPage=<%= perPage %>" class="inline-flex">
            <button class="px-4 py-2 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 flex items-center transition-colors">
              Next
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
          </a>
        <% } else { %>
          <button disabled class="px-4 py-2 rounded-lg border border-gray-300 bg-gray-100 text-gray-400 cursor-not-allowed flex items-center">
            Next
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        <% } %>
      </div>
    </div>
  </div>
</div>