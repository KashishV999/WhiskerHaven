        function parseMarkdown(text) {
            return text
                .replace(/^### (.*$)/gim, "<h3>$1</h3>")
                .replace(/^## (.*$)/gim, "<h2>$1</h2>")
                .replace(/^# (.*$)/gim, "<h1>$1</h1>")
                .replace(/\*\*(.*?)\*\*/g, "<strong>$1</strong>")
                .replace(/\*(.*?)\*/g, "<em>$1</em>")
                .replace(/```([\s\S]*?)```/g, "<pre><code>$1</code></pre>")
                .replace(/`([^`]+)`/g, "<code>$1</code>")
                .replace(/^\* (.*$)/gim, "<li>$1</li>")
                .replace(/(<li>.*<\/li>)/s, "<ul>$1</ul>")
                .replace(/^\d+\. (.*$)/gim, "<li>$1</li>")
                .replace(/^> (.*$)/gim, "<blockquote>$1</blockquote>")
                .replace(/\n/g, "<br>");
        }

