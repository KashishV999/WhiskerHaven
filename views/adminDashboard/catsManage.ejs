<% layout("/layouts/boilerplateAdmin") %>

<div class="flex flex-col space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold">Manage Cats</h1>
    <a href="/cats/new">
      <button class="bg-black hover:bg-gray-800 text-white font-medium py-2 px-4 rounded-lg flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Add New Cat
      </button>
    </a>
  </div>

  <div class="overflow-x-auto border rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-white">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-sm font-medium text-gray-500">Image</th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-medium text-gray-500">Name</th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-medium text-gray-500">Breed</th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-medium text-gray-500">Age</th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-medium text-gray-500">Gender</th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-medium text-gray-500">Shelter</th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-medium text-gray-500">Status</th>
          <th scope="col" class="px-6 py-3 text-left text-sm font-medium text-gray-500">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% cats.forEach((cat) => { %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <img 
                src="<%= cat.image %>"
                alt="<%= cat.name %>"
                class="h-12 w-12 rounded-md object-cover"
              >
            </td>
            <td class="px-6 py-4 whitespace-nowrap font-medium"><%= cat.name %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= cat.breed %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= cat.age %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= cat.gender %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= cat.shelter.name %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if (cat.status === "Available") { %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Available
                </span>
              <% } else if (cat.status === "Pending") { %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  Pending
                </span>
              <% } else if (cat.status === "Adopted") { %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  Adopted
                </span>
              <% } else { %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <%= cat.status %>
                </span>
              <% } %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex space-x-3 justify-end">
                <!-- View Button (Eye Icon) -->
                <a href="/cats/<%= cat._id %>" class="text-indigo-600 hover:text-indigo-900" title="View Cat Details">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </a>
                
                <!-- Edit Button -->
                <a href="/cats/<%= cat._id %>/edit" class="text-blue-600 hover:text-blue-900" title="Edit Cat">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                </a>
                
                <!-- Delete Button -->
                <form action="/shelters/<%= cat.shelter._id %>/cats/<%= cat._id %>?_method=DELETE" method="POST" class="inline">
                  <button type="submit" class="text-red-600 hover:text-red-900" title="Delete Cat">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <div class="flex items-center justify-between">
    <div class="text-sm text-gray-500">
      Showing <span class="font-medium"><%= cats.length %></span> of <span class="font-medium"><%= cats.length %></span> cats
    </div>
    <div class="flex space-x-2">
      <button class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
        Previous
      </button>
      <button class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
        Next
      </button>
    </div>
  </div>
</div>